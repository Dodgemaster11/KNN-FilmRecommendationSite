@model IEnumerable<ShopProj.Models.Film>


@{
    ViewData["Title"] = "Recomendation";
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3">
    @{
        foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img class="card-img-top" src="@item.poster" alt="Card cap" />
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="FilmInformation" asp-action="Film" asp-route-id="@item.Id" class="text-dark">@item.film_name</a>
                        </h5>
                    </div>
                </div>
            </div>
        }
    }

</div>